<div class="container">
  <h1>List of All Teams</h1>

  <table class="homepage">
    <thead>
      <tr>
        <th>ID</th>
        <th colspan="1">Name</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @teams.each do |team| %>
        <tr>
          <td colspan="1"><%= team.id %></td>
          <td colspan="1"><%= team.name %></td>
          <td colspan="1"><%= link_to 'Show', team, class: "btn btn-link" %></td>
          <td colspan="1"><%= link_to 'Edit', edit_team_path(team), class: "btn btn-link" %></td>
          <td colspan="1"><%= link_to 'Destroy', team_path(team), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-primary" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
