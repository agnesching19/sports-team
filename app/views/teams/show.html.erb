<div class="container">
  <p id="notice"><%= notice %></p>

  <h2>
    Team Name: <strong><%= @team.name.upcase %></strong>
  </h2>

  <hr>

  <h3>Members:</h3>
  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th>Position</th>
        <th>Phone</th>
        <th>Email</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @team.members.order(name: :asc).each do |member| %>
        <tr>
          <td><%= member.name %></td>
          <td><%= member.position %></td>
          <td><%= member.phone %></td>
          <td><%= member.email %></td>
          <td><%= link_to 'Show', team_member_path(@team, member), class: "btn btn-link" %></td>
          <td><%= link_to 'Edit', edit_team_member_path(@team, member), class: "btn btn-link" %></td>
          <td><%= link_to 'Delete', team_member_path(@team, member), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-primary btn-team" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <div class="show-team-links">
    <%= link_to 'Add New Member', new_team_member_path(@team), class: "btn btn-info" %>
    <%= link_to 'Edit Team Name', edit_team_path(@team), class: "btn btn-info" %>
    <%= link_to 'Back to Team List', teams_path, class: "btn btn-info" %>
  </div>
</div>

<%= content_for(:title, @team.name + ' | TEAM UP') %>
